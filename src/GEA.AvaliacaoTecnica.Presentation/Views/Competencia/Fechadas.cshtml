@model IEnumerable<GEA.AvaliacaoTecnica.Application.ViewModels.CompetenciaFechadaViewModel>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dados
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Data Vencimento</th>
                                <th>Valor Totral</th>
                                <th>Valor Lucro(5%)</th>
                                <th>Empresa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@Html.DisplayFor(modelItem => item.CompetenciaAberta.DataVencimento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ValorBruto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ValorLucro)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CompetenciaAberta.Empresa.RazaoSocial)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
