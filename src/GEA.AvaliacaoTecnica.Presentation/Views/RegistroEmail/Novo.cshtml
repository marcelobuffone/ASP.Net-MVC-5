@model GEA.AvaliacaoTecnica.Application.ViewModels.NovoRegistroEmailViewModel

@using (Html.BeginForm("Enviar", "RegistroEmail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Novo Email
                </div>
                <div class="panel-body">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.RegistroEmail.titulo, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.RegistroEmail.titulo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RegistroEmail.titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RegistroEmail.texto, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.RegistroEmail.texto, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RegistroEmail.texto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Registrar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <div class="panel-heading">
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>

    </div>






}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
