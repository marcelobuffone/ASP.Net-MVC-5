@model IEnumerable<GEA.AvaliacaoTecnica.Application.ViewModels.RegistroSaidaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de Saída Veículos</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dados
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <a href="@Url.Action("Registrar", "SaidaVeiculo")">
                        <button type="button" class="btn btn-primary" style="margin-bottom: 15px;"> <i class="fa fa-paper-plane"></i> Adicionar</button>
                    </a>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hora Saída</th>
                                <th>Valor Total</th>
                                <th>Código Veículo</th>
                                <th>Placa Veículo</th>
                                <th>Hora Entrada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="gradeA">
                                <td>@Html.DisplayFor(modelItem => item.HoraSaida)</td>
                                <td>@Html.DisplayFor(modelItem => item.ValorTotal)</td>
                                <td>@Html.DisplayFor(modelItem => item.RegistroEntrada.Codigo)</td>
                                <td>@Html.DisplayFor(modelItem => item.RegistroEntrada.Veiculo.Placa)</td>
                                <td>@Html.DisplayFor(modelItem => item.RegistroEntrada.HoraEntrada)</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
