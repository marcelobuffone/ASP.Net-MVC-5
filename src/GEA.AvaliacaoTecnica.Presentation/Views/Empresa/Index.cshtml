@model IEnumerable<GEA.AvaliacaoTecnica.Application.ViewModels.EmpresaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Empresas Registradas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dados
            </div>

            <div class="panel-body">

                <div class="dataTable_wrapper">
                    <a href="@Url.Action("Cadastrar", "empresa")">
                        <button type="button" class="btn btn-primary" style="margin-bottom: 15px;"><i class="fa fa-paper-plane"></i> Adicionar</button>
                    </a>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Razão Social</th>
                                <th>Email</th>
                                <th>Dia Vencimento</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@Html.DisplayFor(modelItem => item.RazaoSocial)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiaVencimento)</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
