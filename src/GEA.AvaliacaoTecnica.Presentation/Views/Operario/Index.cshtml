@model IEnumerable<GEA.AvaliacaoTecnica.Application.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Usuários Registrados</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dados
            </div>

            <div class="panel-body">

                <div class="dataTable_wrapper">
                    <a href="@Url.Action("Register", "Account")">
                        <button type="button" class="btn btn-primary" style="margin-bottom: 15px;"><i class="fa fa-paper-plane"></i> Adicionar</button>
                    </a>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Ativo</th>
                                <th>Empresa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="gradeA">
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Empresa.RazaoSocial)</td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
